{{#if updateQuestionForm}}
    <div class="updateQuestionPage">
      <h4>Update {{question.authors}}'s question about {{question.title}}</h4>
      <br>
      <form id="updateAnswerPageForm">
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" placeholder=question.description}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="date">Update Date</label>
          {{input value=date id="date" placeholder=question.date}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update the Question</button>
{{/if}}
