{{#if updateAnswerForm}}
  <div class="updateAnswerPage" >
    <h4>Update {{answer.authors}}'s answer to {{answer.question.title}}</h4>
    <br>
    <form id="updateAnswerPageForm">
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=answer.title}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder=answer.question}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=answer.author}}
      </div>

      <div class="form-group">
        <label for="date">Update Date</label>
        {{input value=date id="date" placeholder=answer.date}}
      </div>

      <div class="form-group">
        <label for="rating">Rate Answer (1-5)</label>
        {{input value=rating id="rating" placeholder=answer.rating}}
      </div>

      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
    <button {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
